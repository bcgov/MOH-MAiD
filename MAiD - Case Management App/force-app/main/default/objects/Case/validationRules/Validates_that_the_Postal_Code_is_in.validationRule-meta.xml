<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validates_that_the_Postal_Code_is_in</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Patient_Postal_Code__c , &quot;((?i)[ABCEGHJKLMNPRSTVXY]\\d[A-Z]?\\s?\\d[A-Z]\\d)?&quot;))</errorConditionFormula>
    <errorMessage>Patient postal code must be in A9A 9A9 format.</errorMessage>
</ValidationRule>
